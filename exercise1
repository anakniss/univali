Var
// Seção de Declarações das variáveis

   raio, area, comprimento: real


Inicio

      escreva("Digite o raio: ")
      leia(raio)
      
      area <- pi * (raio ^ 2)
      escreval("A área é: ", area:6:2)
      
      comprimento <- 2 * pi * raio
      escreval("O comprimento é: ", comprimento:6:2)

Fimalgoritmo
